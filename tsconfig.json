{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@types/*": [
        "./src/types/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@routes/*": [
        "./src/routes/*",
      ],
      "@routes": [
        "./src/routes/index"
      ],
      "@config/*": [
        "./src/config/*",
      ],
      "@config": [
        "./src/config/index",
      ],
      "@db/*": [
        "./src/db/*",
      ],
      "@db": [
        "./src/db/index"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    }
  }
}